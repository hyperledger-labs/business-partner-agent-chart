{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "acapy": {
            "type": "object",
            "properties": {
                "adminURLApiKey": {
                    "type": "string"
                },
                "affinity": {
                    "type": "object"
                },
                "agentSeed": {
                    "type": "string",
                    "description": "The agent's seed"
                },
                "fullnameOverride": {
                    "type": "string"
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "pullPolicy": {
                            "type": "string"
                        },
                        "repository": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "imagePullSecrets": {
                    "type": "array"
                },
                "ingress": {
                    "type": "object",
                    "properties": {
                        "annotations": {
                            "type": "object"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "tls": {
                            "type": "array"
                        }
                    }
                },
                "labelOverride": {
                    "type": "string"
                },
                "nameOverride": {
                    "type": "string"
                },
                "nodeSelector": {
                    "type": "object"
                },
                "openshift": {
                    "type": "object",
                    "properties": {
                        "route": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean"
                                },
                                "path": {
                                    "type": "string"
                                },
                                "targetPort": {
                                    "type": "string"
                                },
                                "timeout": {
                                    "type": "string"
                                },
                                "tls": {
                                    "type": "object",
                                    "properties": {
                                        "enabled": {
                                            "type": "boolean"
                                        },
                                        "insecureEdgeTerminationPolicy": {
                                            "type": "string"
                                        },
                                        "termination": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "wildcardPolicy": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "podAnnotations": {
                    "type": "object"
                },
                "podSecurityContext": {
                    "type": "object"
                },
                "readOnlyMode": {
                    "type": "boolean"
                },
                "tails": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "description": "Check to enable revocation (external tails server required)",
                            "title": "Enable revocation support?",
                            "form": true
                        },
                        "baseUrlOverride": {
                            "type": "string"
                        },
                        "uploadUrlOverride": {
                            "type": "string"
                        }   
                    }
                },
                "resources": {
                    "type": "object",
                    "properties": {
                        "requests": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "securityContext": {
                    "type": "object",
                    "properties": {
                        "runAsUser": {
                            "type": "integer"
                        }
                    }
                },
                "service": {
                    "type": "object",
                    "properties": {
                        "adminPort": {
                            "type": "integer"
                        },
                        "httpPort": {
                            "type": "integer"
                        },
                        "type": {
                            "type": "string"
                        }
                    }
                },
                "staticArgs": {
                    "type": "object",
                    "properties": {
                        "autoAcceptInvites": {
                            "type": "boolean"
                        },
                        "autoAcceptRequests": {
                            "type": "boolean"
                        },
                        "autoPingConnection": {
                            "type": "boolean"
                        },
                        "autoProvision": {
                            "type": "boolean"
                        },
                        "autoRespondCredentialOffer": {
                            "type": "boolean"
                        },
                        "autoRespondCredentialProposal": {
                            "type": "boolean"
                        },
                        "autoRespondCredentialRequest": {
                            "type": "boolean"
                        },
                        "autoRespondMessages": {
                            "type": "boolean"
                        },
                        "autoRespondPresentationProposal": {
                            "type": "boolean"
                        },
                        "autoRespondPresentationRequest": {
                            "type": "boolean"
                        },
                        "autoStoreCredential": {
                            "type": "boolean"
                        },
                        "autoVerifyPresentation": {
                            "type": "boolean"
                        },
                        "logLevel": {
                            "type": "string"
                        },
                        "monitorPing": {
                            "type": "boolean"
                        },
                        "publicInvites": {
                            "type": "boolean"
                        }
                    }
                },
                "tolerations": {
                    "type": "array"
                }
            }
        },
        "bpa": {
            "type": "object",
            "properties": {
                "affinity": {
                    "type": "object"
                },
                "config": {
                    "type": "object",
                    "properties": {
                        "bootstrap": {
                            "type": "object",
                            "description": "The administrator credentials.",
                            "title": "Login Credentials",
                            "properties": {
                                "username": {
                                    "type": "string",
                                    "title": "Username",
                                    "form": true
                                },
                                "password": {
                                    "type": "string",
                                    "title": "Password",
                                    "form": true
                                }
                            },
                            "form": true
                        },
                        "nameOverride": {
                            "type": "string"
                        },
                        "creddef": {
                            "type": "object",
                            "properties": {
                                "revocationRegistrySize": {
                                    "type": "integer"
                                }
                            }
                        },
                        "i18n": {
                            "type": "object",
                            "properties": {
                                "fallbackLocale": {
                                    "type": "string"
                                },
                                "locale": {
                                    "type": "string"
                                }
                            }
                        },
                        "imprint": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean",
                                    "description": "Check to show link to imprint page in frontend",
                                    "title": "Show Imprint page?",
                                    "form": true
                                },
                                "urlOverride": {
                                    "type": "string"
                                }
                            }
                        },
                        "ledger": {
                            "type": "object",
                            "properties": {
                                "browserUrlOverride": {
                                    "type": "string"
                                }
                            }
                        },
                        "privacyPolicy": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean",
                                    "description": "If checked, show link to privacy policy page in frontend",
                                    "title": "Show policy page?",
                                    "form": true
                                },
                                "urlOverride": {
                                    "type": "string"
                                }
                            }
                        },
                        "scheme": {
                            "type": "string"
                        },
                        "security": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean"
                                }
                            }
                        },
                        "title": {
                            "type": "string"
                        },
                        "web": {
                            "type": "object",
                            "properties": {
                                "only": {
                                    "type": "boolean"
                                }
                            }
                        },
                        "logConfigurationFile": {
                            "type": "string"
                        }                
                    }
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "pullPolicy": {
                            "type": "string"
                        },
                        "repository": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "imagePullSecrets": {
                    "type": "array"
                },
                "ingress": {
                    "type": "object",
                    "properties": {
                        "annotations": {
                            "type": "object"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "tls": {
                            "type": "array"
                        }
                    }
                },
                "nodeSelector": {
                    "type": "object"
                },
                "openshift": {
                    "type": "object",
                    "properties": {
                        "route": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean"
                                },
                                "path": {
                                    "type": "string"
                                },
                                "targetPort": {
                                    "type": "string"
                                },
                                "timeout": {
                                    "type": "string"
                                },
                                "tls": {
                                    "type": "object",
                                    "properties": {
                                        "enabled": {
                                            "type": "boolean"
                                        },
                                        "insecureEdgeTerminationPolicy": {
                                            "type": "string"
                                        },
                                        "termination": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "wildcardPolicy": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "podAnnotations": {
                    "type": "object"
                },
                "podSecurityContext": {
                    "type": "object"
                },
                "resources": {
                    "type": "object",
                    "properties": {
                        "requests": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "securityContext": {
                    "type": "object"
                },
                "service": {
                    "type": "object",
                    "properties": {
                        "port": {
                            "type": "integer"
                        },
                        "type": {
                            "type": "string"
                        }
                    }
                },
                "serviceAccount": {
                    "type": "object",
                    "properties": {
                        "annotations": {
                            "type": "object"
                        },
                        "create": {
                            "type": "boolean"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                },
                "tolerations": {
                    "type": "array"
                }
            }
        },
        "global": {
            "type": "object",
            "properties": {
                "fullnameOverride": {
                    "type": "string"
                },
                "ingressSuffix": {
                    "type": "string"
                },
                "ledger": {
                    "type": "string",
                    "enum": ["idu", "bosch-test"],
                    "description": "The ledger to be configured",
                    "title": "Ledger",
                    "form": true
                },
                "nameOverride": {
                    "type": "string"
                },
                "persistence": {
                    "type": "object",
                    "properties": {
                        "deployPostgres": {
                            "type": "boolean"
                        }
                    }
                }

            }
        },
        "keycloak": {
            "type": "object",
            "properties": {
                "clientId": {
                    "type": "string"
                },
                "clientSecret": {
                    "type": "string"
                },
                "config": {
                    "type": "object",
                    "properties": {
                        "endsessionUrl": {
                            "type": "string"
                        },
                        "issuer": {
                            "type": "string"
                        },
                        "nameKey": {
                            "type": "string"
                        },
                        "redirectUri": {
                            "type": "string"
                        },
                        "rolesName": {
                            "type": "string"
                        },
                        "scopes": {
                            "type": "string"
                        }
                    }
                },
                "enabled": {
                    "type": "boolean"
                }
            }
        },
        "postgresql": {
            "type": "object",
            "properties": {
                "containerSecurityContext": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "tag": {
                            "type": "integer"
                        }
                    }
                },
                "persistence": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "description": "Check to enable data persistance (recommended)",
                            "type": "boolean",
                            "title": "Persist data?",
                            "form": true
                        }
                    }
                },
                "postgresqlDatabase": {
                    "type": "string"
                },
                "postgresqlPassword": {
                    "type": "string"
                },
                "postgresqlUsername": {
                    "type": "string"
                },
                "resources": {
                    "type": "object",
                    "properties": {
                        "requests": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "securityContext": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "service": {
                    "type": "object",
                    "properties": {
                        "port": {
                            "type": "integer"
                        }
                    }
                }
            }
        },
        "schemas": {
            "type": "object",
            "properties": {
                "config": {
                    "type": "object"
                },
                "enabled": {
                    "type": "boolean"
                }
            }
        },
        "ux": {
            "type": "object",
            "properties": {
                "config": {
                    "type": "object"
                },
                "preset": {
                    "type": "string",
                    "enum": ["bcgov", "custom", "default"]
                }
            }
        }
    }
}